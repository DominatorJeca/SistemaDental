<UserControl x:Class="SistemaDental.MVCCV.Vista.CitaVista"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SistemaDental.MVCCV.Vista"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="455" d:DesignWidth="1050" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25"/>
            <ColumnDefinition Width="550"/>
            <ColumnDefinition Width="25" />
            <ColumnDefinition Width="425"/>
            <ColumnDefinition Width="25"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="405"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/TeethPattern.jpg" Stretch="UniformToFill"/>
        </Grid.Background>


        <StackPanel Grid.Row="1" Grid.Column="1">
            <Label Content="Citas" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" Foreground="Black" Background="#7F056676" FontFamily="Bahnschrift" />
            <StackPanel Orientation="Horizontal" Margin="0,0,135,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" Height="44">
                <Label Content="Paciente" HorizontalAlignment="Left"  VerticalAlignment="Top"  FontSize="15" Foreground="Black" Background="White" FontFamily="Bahnschrift" Grid.Column="1"/>

                <ComboBox x:Name="cmbPaciente" HorizontalAlignment="Left" VerticalAlignment="Top" Width="216" RenderTransformOrigin="0.603,0.358" Grid.Column="1" Text="{Binding SelectedItem.IdPacientes, ElementName=dtg_Citas}"/>
            </StackPanel>
            <DataGrid x:Name="dtg_Citas" HorizontalAlignment="Left" Height="196" VerticalAlignment="Top" Width="545" Background="#FF056676" Foreground="#DDFFFFFF" RenderTransformOrigin="0.45,0.505" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="dtg_Citas_SelectionChanged">
                <DataGrid.Columns >
                    <DataGridTextColumn Header="Paciente">
                        <DataGridTextColumn.Binding>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="NombrePaciente" />
                                <Binding Path="ApellidoPaciente" />
                            </MultiBinding>
                        </DataGridTextColumn.Binding>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Doctor" Width="125" Binding="{Binding NombreDoctor}"/>
                    <DataGridTextColumn Header="Tratamiento" Binding="{Binding NombreTratamiento}" Width="120"/>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding fechaCita}" Width="175"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>


        <StackPanel Grid.Row="1" Grid.Column="3" HorizontalAlignment="Center" Width="425" Margin="0,52,0,145">

            <StackPanel Orientation="Horizontal" Height="28" Margin="0,0,56,0" Width="79" HorizontalAlignment="Right" VerticalAlignment="Center">
                <CheckBox Content="¿Activo?" Width="85" VerticalContentAlignment="Stretch" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FF056676" BorderBrush="#FF056676" IsChecked="True" FontSize="16" Height="28" />


            </StackPanel>

            <StackPanel Orientation="Horizontal" Height="40" HorizontalAlignment="Center" Margin="54,0,51,0" Width="310">
                <Label Content="Doctor" HorizontalAlignment="Left" VerticalAlignment="Top"  FontSize="15" Foreground="Black" Background="White" FontFamily="Bahnschrift" Grid.Column="1" RenderTransformOrigin="1.349,0.404" Height="40" Width="94"/>
                <ComboBox x:Name="cmbEmpleado" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="217" RenderTransformOrigin="0.603,0.358" Text="{Binding SelectedItem.NombreDoctor, ElementName=dtg_Citas, Mode=OneWay}"/>

            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40" HorizontalAlignment="Center" Margin="52,0,53,0" Width="310">
                <Label Content="Tratamiento" HorizontalAlignment="Left"  VerticalAlignment="Top"  FontSize="15" Foreground="Black" Background="White" FontFamily="Bahnschrift" Grid.Column="1" Width="95" Height="40" />
                <ComboBox x:Name="cmbTratamiento" HorizontalAlignment="Center" VerticalAlignment="Top" Width="216" Grid.Column="1" Text="{Binding SelectedItem.NombreTratamiento, ElementName=dtg_Citas, Mode=OneWay}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40" HorizontalAlignment="Center">
                <Label Content="Fecha de cita" Grid.Column="1"  VerticalAlignment="Top"  FontSize="15" Foreground="Black" Background="White" FontFamily="Bahnschrift" Height="40" Width="97"/>
                <DatePicker x:Name="cdCitas" HorizontalAlignment="Left"  VerticalAlignment="Top" Height="25" Width="213" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Height="40" HorizontalAlignment="Center" Margin="54,0,51,0" Width="310">
                <Label Content="Hora de cita" VerticalAlignment="Top"  FontSize="15" Foreground="Black" Background="White" FontFamily="Bahnschrift" Height="40" Grid.Column="1" Width="93" />
                <materialDesign:TimePicker SelectedTimeFormat="Short" x:Name="ctTiempo" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Width="216" Height="25"/>

            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.ColumnSpan="3" Grid.Column="1" Margin="74,323,376,50" Grid.Row="1">
            <Button x:Name="btnCancelar" Content="Cancelar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="202" RenderTransformOrigin="0.463,1.027" Background="#FF056676" BorderBrush="{x:Null}" IsEnabled="False" Click="btnCancelar_Click" Grid.Column="1"/>
            <Button x:Name="btnGuardar" Content="Guardar" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="202" Background="#FF056676" BorderBrush="{x:Null}" Click="btnGuardar_Click" IsEnabled="False" Grid.ColumnSpan="2"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Bottom" Grid.ColumnSpan="3" Grid.Column="1" Margin="74,0,376,82" Grid.Row="1">
            <Button x:Name="btnAgregar" Content="Agregar" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="202" Background="#FF056676" BorderBrush="{x:Null}" Grid.ColumnSpan="2" Click="btnAgregar_Click"/>
            <Button x:Name="btnEditar" Content="Editar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="202" Background="#FF056676" BorderBrush="{x:Null}" Grid.Column="1" Click="btnEditar_Click"/>

        </StackPanel>

    </Grid>
</UserControl>
