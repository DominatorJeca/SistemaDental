<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SistemaDental"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        x:Class="SistemaDental.Login"
        mc:Ignorable="d"
        Title="Inicio de Sesión" Height="520" Width="400" WindowStartupLocation="CenterScreen" Closed="Window_Closed" WindowStyle="None" AllowsTransparency="True"  MouseDown="Window_MouseDown">
    <Window.Background>
        <ImageBrush ImageSource="/imagenes/FondoProyecto2.png"/>
    </Window.Background>
    <Window.Resources>
        <Image x:Key="Nover" Source="/imagenes/eye.png" Height="40" Width="40" Stretch="Uniform" />
        <Image x:Key="ver"  Source="/imagenes/Sin título-1.png" Height="40" Width="40" Stretch="Uniform"/>
    </Window.Resources>
    <Grid Margin="0,0,0,0">
        <Button x:Name="btnLogin" Content="Iniciar" Grid.Column="3" HorizontalAlignment="Left" Margin="94,385,0,0" VerticalAlignment="Top" Width="102" BorderThickness="0" Background="{x:Null}" FontFamily="Bahnschrift" FontSize="20" Click="btnLogin_Click" />
        <Image Source="/imagenes/Happy_Sm.png" Height="250" Width="180" HorizontalAlignment="Center" VerticalAlignment="Top"></Image>
        <Button x:Name="btnSalir"  Margin="362,10,10,482" Width="Auto" Height="Auto"  Click="btnSalir_Click" Style="{StaticResource MaterialDesignFloatingActionAccentButton}" ToolTip="Salir" Background="Red" BorderBrush="Transparent">
            <materialDesign:PackIcon Kind="Close" Height="auto" Width="auto"  RenderTransformOrigin="0.264,0.45"></materialDesign:PackIcon>
        </Button>
        <Button x:Name="btnMin"  Margin="329,10,43,482" Width="Auto" Height="Auto"  Click="btnMin_Click" Style="{StaticResource MaterialDesignFloatingActionAccentButton}" ToolTip="Minimizar" Background="Turquoise" BorderBrush="Transparent">
            <materialDesign:PackIcon Kind="WindowMinimize" Height="auto" Width="auto"  RenderTransformOrigin="0.264,0.45"></materialDesign:PackIcon>
        </Button>
        <Label Content="Ingrese los datos" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="129,175,128,0" Foreground="#394F52" FontSize="18"/>

        <Border Background="#7F056676" BorderThickness="1" CornerRadius="10" Margin="65,212,65,172">
            <StackPanel   Height="126"  Background="Transparent" >
                <TextBox x:Name="txtUsuario" Margin="10,0,0,10" materialDesign:HintAssist.Hint="Usuario" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Bahnschrift" FontSize="18" Background="{x:Null}" Height="45"  TextChanged="txtUsuario_TextChanged" HorizontalAlignment="Left" Width="232"/>
                <StackPanel Orientation="Horizontal">
                    <PasswordBox x:Name="txtPassword" Margin="10,10,0,10" materialDesign:HintAssist.Hint="Contraseña" Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" FontFamily="Bahnschrift" FontSize="18" Background="{x:Null}" Height="42" mah:TextBoxHelper.UseFloatingWatermark="True" mah:PasswordBoxHelper.CapsLockIcon="!" mah:TextBoxHelper.HasText="True" PasswordChar="●" HorizontalAlignment="Left" Width="196"/>
                    <TextBox x:Name="txtpas" Margin="10,10,0,10" materialDesign:HintAssist.Hint="Contraseña" Style="{StaticResource MaterialDesignFloatingHintTextBox}" FontFamily="Bahnschrift" FontSize="18" Background="{x:Null}" TextChanged="txtUsuario_TextChanged" HorizontalAlignment="Left" Width="172" Grid.Column="3" Height="43" VerticalAlignment="Top" Visibility="Collapsed"/>
                    <Button x:Name="btnview"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="70" Background="Transparent" BorderBrush="{x:Null}" Height="52" Click="Button_Click" >
                        <DynamicResource ResourceKey="Nover"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
        <Button  x:Name="btnIniciarSesion"  HorizontalAlignment="Center" BorderBrush="Transparent" FontStyle="Normal" FontSize="17" ToolTip="Iniciar Sesion"  Click="btnLogin_Click" Style="{StaticResource MaterialDesignRaisedAccentButton }" materialDesign:ButtonAssist.CornerRadius="25" Background="#7F056676" Margin="65,378,65,84" Height="Auto" Width="260">
            <TextBlock Text="Iniciar Sesión" Foreground="#394F52" FontFamily="Bahnschrift"/>
        </Button>
        <Button x:Name="btnOlvidarPass" Style="{StaticResource MaterialDesignFlatButton}" Content="¿Olvidó su contraseña?" FontFamily="Bahnschrift" FontSize="17" Margin="94,456,94,22" Foreground="#394F52"></Button>
       
    </Grid>

</Window>
